{
  "deployment": {
    "clean_by_default": false,
    "validate_after_deploy": true,
    "backup_before_deploy": true,
    "auto_detect_timeout": 5
  },
  "device_defaults": {
    "primary": {
      "startup_window": 30,
      "connection_timeout": 30,
      "default_profile": "noisy_vcr"
    },
    "secondary": {
      "startup_window": 30,
      "connection_timeout": 30,
      "scan_interval": 0.1
    }
  },
  "libraries": {
    "required": [
      "adafruit_ble",
      "adafruit_drv2605",
      "adafruit_tca9548a",
      "adafruit_itertools",
      "neopixel"
    ],
    "optional": [
      "adafruit_debug"
    ]
  },
  "ignore_patterns": [
    "__pycache__",
    "*.pyc",
    ".DS_Store",
    "*.swp",
    "tests/",
    "docs/",
    ".pytest_cache",
    "*.log"
  ],
  "source_files": {
    "required": [
      "code.py",
      "src/"
    ],
    "optional": [
      "boot.py",
      "profiles/"
    ]
  },
  "validation": {
    "required_files": [
      "code.py",
      "settings.json",
      "lib/",
      "src/"
    ],
    "check_role_config": true,
    "check_libraries": true,
    "verify_syntax": false
  }
}
